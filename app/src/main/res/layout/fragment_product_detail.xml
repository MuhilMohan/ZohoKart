<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muhil.zohokart.fragments.ProductDetailFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/product_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/add_to_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#E0E0E0"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="+ Cart"
                android:drawableStart="@mipmap/ic_add_shopping_cart_black_24dp"
                android:drawablePadding="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_to_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#E0E0E0"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="-> Cart"
                android:drawableStart="@mipmap/ic_shopping_cart_black_24dp"
                android:drawablePadding="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/buy_now"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:background="#EF6C00" />

    </LinearLayout>

</FrameLayout>
