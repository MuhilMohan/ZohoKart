<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.muhil.zohokart.fragments.ProductDetailPagerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:text="Title"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:paddingTop="4dp"
                android:paddingLeft="16dp"
                android:text="Description"
                android:textSize="14dp" />

            <ToggleButton
                android:id="@+id/wishlist_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/image_toggle_button"/>

            <FrameLayout
                android:id="@+id/thumbnail_holder"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/description">

                <ImageView
                    android:id="@+id/product_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_phone_iphone_black_24dp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/horizon_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/thumbnail_holder"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:id="@+id/price_and_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizon_divider_1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:text="Rs. "
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="price"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BDBDBD"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/horizon_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/price_and_stars"
                android:background="#BDBDBD"/>

            <TextView
                android:id="@+id/warranty_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizon_divider_2"
                android:padding="8dp"
                android:text="Warranty"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/warranty_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/warranty_header" />

            <TextView
                android:id="@+id/horizon_divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/warranty_text"
                android:background="#BDBDBD"/>

            <TextView
                android:id="@+id/specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizon_divider_3"
                android:padding="8dp"
                android:text="Specifications"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@id/horizon_divider_3"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_fa_trash_o"
                android:background="#FFF"/>

            <TextView
                android:id="@+id/horizon_divider_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/specifications"
                android:background="#BDBDBD"/>

            <TextView
                android:id="@+id/other_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizon_divider_4"
                android:padding="8dp"
                android:text="Other Variants"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
